<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FAFAFA"
    tools:context=".ui.MainActivity">

    <!-- Barre d'onglets stylisée -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#6D4C41"
        android:elevation="4dp"
        app:tabGravity="fill"
        app:tabIndicatorColor="#FFB300"
        app:tabIndicatorHeight="4dp"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@android:color/white"
        app:tabTextColor="#BCAAA4"
        app:tabTextAppearance="@style/TabTextStyle">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menu" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabShopping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Courses" />

    </com.google.android.material.tabs.TabLayout>

    <!-- Zone pour afficher les fragments -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Bouton de génération stylisé avec ombre -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnGenerate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:backgroundTint="#6D4C41"
        android:elevation="6dp"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:text="Générer le Menu"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cornerRadius="12dp"
        app:icon="@android:drawable/ic_menu_rotate"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        app:iconTint="@android:color/white" />

</LinearLayout>